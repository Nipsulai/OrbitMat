&GLOBAL
  PROJECT DFT
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep

  &DFT
    BASIS_SET_FILE_NAME {BASIS_SET_FILE_NAME}
    POTENTIAL_FILE_NAME {POTENTIAL_FILE_NAME}
    UKS {UKS}

    &MGRID
      CUTOFF {CUTOFF}
      REL_CUTOFF 60
    &END MGRID

    &QS
      EPS_DEFAULT 1.0E-10
    &END QS

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

    &KPOINTS
      SCHEME MONKHORST-PACK {KX} {KY} {KZ}
      FULL_GRID T
      SYMMETRY T
    &END KPOINTS

    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1e-8
      MAX_SCF 200

      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION

      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING

      &SMEAR
        ELECTRONIC_TEMPERATURE  1000
        METHOD FERMI_DIRAC
      &END SMEAR

      ADDED_MOS -1
    &END SCF

    &PRINT
      &MO
        EIGENVALUES T
        OCCNUMS T
        FILENAME eigval
        ADD_LAST NUMERIC
        &EACH
          QS_SCF 0
        &END EACH
      &END MO

      &KS_CSR_WRITE
        REAL_SPACE T
	    BINARY T
        &EACH
          QS_SCF -1
        &END EACH
      &END KS_CSR_WRITE

      &S_CSR_WRITE
        REAL_SPACE T
        &EACH
          QS_SCF -1
        &END EACH
      &END S_CSR_WRITE

      &P_CSR_WRITE
        REAL_SPACE T
        &EACH
          QS_SCF -1
        &END EACH
      &END P_CSR_WRITE

      &HCORE_CSR_WRITE
        REAL_SPACE T
        &EACH
          QS_SCF -1
        &END EACH
      &END HCORE_CSR_WRITE
    &END PRINT

  &END DFT

  &SUBSYS

    &CELL
      PERIODIC XYZ
      CELL_FILE_FORMAT CIF
      CELL_FILE_NAME {CIF_PATH}
    &END CELL

    &TOPOLOGY
      COORD_FILE_FORMAT CIF
      COORD_FILE_NAME {CIF_PATH}
      &GENERATE
        REORDER T
      &END GENERATE
    &END TOPOLOGY

{KINDS}

  &END SUBSYS
&END FORCE_EVAL
