&GLOBAL
  PROJECT Ag10C2F8_407646
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep

  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    UKS FALSE

    &MGRID
      CUTOFF 300
      REL_CUTOFF 50
    &END MGRID

    &QS
      EPS_DEFAULT 1.0E-10
    &END QS

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

    &KPOINTS
      SCHEME MONKHORST-PACK 3 3 2
      FULL_GRID T
      SYMMETRY T
      PARALLEL_GROUP_SIZE  1
    &END KPOINTS

    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1e-8
      MAX_SCF 200

      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION

      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING

      ADDED_MOS -1
    &END SCF

    &PRINT
      &MO
        EIGENVALUES T
        OCCNUMS T
        FILENAME eigenvalues
        &EACH
          QS_SCF 0
        &END EACH
      &END MO
    &END PRINT

  &END DFT

  &SUBSYS
    &CELL
      PERIODIC XYZ
      CELL_FILE_FORMAT CIF
      CELL_FILE_NAME setup/tests/cp2k/Ag10C2F8_407646.cif
    &END CELL

    &TOPOLOGY
      COORD_FILE_FORMAT CIF
      COORD_FILE_NAME setup/tests/cp2k/Ag10C2F8_407646.cif
      &GENERATE
        REORDER T
      &END GENERATE
    &END TOPOLOGY

    &KIND Ag
      BASIS_SET DZVP-MOLOPT-GGA-GTH-q11
      POTENTIAL GTH-GGA-q11
    &END KIND

    &KIND C
      BASIS_SET DZVP-MOLOPT-GGA-GTH-q4
      POTENTIAL GTH-GGA-q4
    &END KIND

    &KIND F
      BASIS_SET DZVP-MOLOPT-GGA-GTH-q7
      POTENTIAL GTH-GGA-q7
    &END KIND

  &END SUBSYS
&END FORCE_EVAL
